{% extends "eZPlatformUIBundle::pjax_admin.html.twig" %}

{% block title %}{{ 'Dashboard'|trans }}{% endblock %}

{% trans_default_domain "sitebuilder" %}

{% block header_title %}
    <h1 class="edgarezsb-dashboard-title">{{ 'Dashboard'|trans }}</h1>
{% endblock %}

{% block content %}
    <section class="ez-tabs ez-edgarezsbdashboard-content">

        <ul class="ez-tabs-list">
            {% for tab_item in tab_items %}
                <li class="ez-tabs-label{% if loop.first %} is-tab-selected{% endif %}"><a href="#ez-tabs-{{ tab_item }}">{{ tab_item|trans }}</a></li>
            {% endfor %}
        </ul>

        <div class="ez-tabs-panels">
            {% for tab_item in tab_items %}
                <div class="ez-tabs-panel{% if loop.first %} is-tab-selected{% endif %}" id="ez-tabs-{{ tab_item }}">
                    {{ render( controller(
                    'edgar_ez_site_builder.controller.dashboard:tabAction', {
                        'tabItem': tab_item,
                        'viewType': 'pjax_tab'
                    } ) ) }}
                </div>
            {% endfor %}
        </div>

    </section>
{% endblock %}

