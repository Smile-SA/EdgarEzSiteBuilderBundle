siteaccess:
{% block siteaccess %}
    list: [{{ siteaccess }}]
    groups:
        smileezsb_models_{{ siteaccess_model }}: [{{ siteaccess }}]
        smileezsb_customer_{{ customer }}: [{{ siteaccess }}]
    match:
        {% for site in sites %}

        Compound\LogicalAnd:
            {{ site.siteaccess }}:
                matchers:
                    Map\URI:
                        {% if site.suffix != '' %}{{ site.suffix }}{% else %}{{ site.siteaccess }}{% endif %}: true
                    Map\Host:
                        {{ site.host }}: true
                match: {{ site.siteaccess }}

        {% endfor %}
{% endblock %}

system:
{% block system %}
    {% for languageCode, site in sites %}

    {{ site.siteaccess }}:
        languages: [{{ languageCode }}]
        var_dir: var/{{ site.siteaccess }}
        content:
            tree_root:
                location_id: {{ siteLocationID }}
                excluded_uri_prefixes:
                    - {{ site.exclude_uri_prefixes }}

    {% endfor %}
{% endblock %}
