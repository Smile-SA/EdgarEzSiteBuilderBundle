siteaccess:
{% block siteaccess %}
    list: [{{ siteaccess }}]
    groups:
        edgarezsb_group_{{ siteaccess_model }}: [{{ siteaccess }}]
    match:
        Compound\LogicalAnd:
            {{ siteaccess }}:
                matchers:
                    Map\URI:
                        {% if mapuri %}{{ siteaccess_suffix }}: true{% else %}{{ siteaccess }}: false{% endif %}

                    Map\Host:
                        {{ host }}: true
                match: {{ siteaccess }}
{% endblock %}

system:
{% block system %}
    {{ siteaccess }}:
        var_dir: var/{{ siteaccess }}
        content:
            tree_root:
                location_id: {{ siteLocationID }}
                excluded_uri_prefixes:
                    - {{ exclude_uri_prefixes }}
{% endblock %}
