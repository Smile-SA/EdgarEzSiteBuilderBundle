siteaccess:
{% block siteaccess %}
    list: [{{ siteaccess }}]
    groups:
        {{ siteaccess }}: [{{ siteaccess }}]
    match:
        Compound\LogicalAnd:
            {{ siteaccess }}:
                matchers:
                    Map\URI:
                        {{ siteaccess }}: true
                    Map\Host:
                        {{ host }}: true
                match: {{ siteaccess }}
{% endblock %}

system:
{% block system %}
    {{ siteaccess }}:
        var_dir: var/{{ siteaccess }}
        location_view:
            full:
                # Defining a ruleset matching a location and pointing to a controller
                edgar_ez_sb_model:
                    template: {{ bundle_basename }}Bundle:full:model.html.twig
                    match:
                        Identifier\ContentType: [edgar_ez_sb_model]
                        Identifier\ContentType: [edgar_ez_sb_site]
{% endblock %}
