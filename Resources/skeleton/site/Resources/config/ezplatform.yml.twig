siteaccess:
{% block siteaccess %}
    list: [{{ siteaccess }}]
    groups:
        smileezsb_models_{{ siteaccess_model }}: [{{ siteaccess }}]
        smileezsb_customer_{{ customer }}: [{{ siteaccess }}]
    match:
        Compound\LogicalAnd:

        {% for site in sites %}

            {{ site.siteaccess }}:
                matchers:

                    {% if site.suffix != '' %}

                    Map\URI:
                        {{ site.suffix }}: true

                    {% endif %}

                    Map\Host:
                        {{ site.host }}: true
                match: {{ site.siteaccess }}

        {% endfor %}

{% endblock %}

system:
{% block system %}
    {% for languageCode, site in sites %}

    {{ site.siteaccess }}:
        languages: [{{ languageCode }}]
        var_dir: var/{{ site.siteaccess }}
        content:
            tree_root:
                location_id: {{ siteLocationID }}
                excluded_uri_prefixes:
                    - {{ site.exclude_uri_prefixes }}

    {% endfor %}
{% endblock %}
