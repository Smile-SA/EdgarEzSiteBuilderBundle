siteaccess:
{% block siteaccess %}
    list: [{{ siteaccess }}]
    groups:
        edgarezsb_group_{{ siteaccess }}: [{{ siteaccess }}]
    match:
        Compound\LogicalAnd:
            {{ siteaccess }}:
                matchers:
                    Map\URI:
                        {{ siteaccess }}: true
                    Map\Host:
                        {{ host }}: true
                match: {{ siteaccess }}
{% endblock %}

system:
{% block system %}
    {{ siteaccess }}:
        var_dir: var/{{ siteaccess }}
        content:
            tree_root:
                location_id: {{ modelLocationID }}
                excluded_uri_prefixes:
                    - {{ exclude_uri_prefixes }}
    edgarezsb_group_{{ siteaccess }}:
        location_view:
            full:
                edgar_ez_sb_model:
                    template: {{ bundle_basename }}Bundle:full:model.html.twig
                    match:
                        Identifier\ContentType: [edgar_ez_sb_model]
{% endblock %}
